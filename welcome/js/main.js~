$(document).ready(function(){
    $("#download").click(function(){
        $("#email").slideDown();    
    });
    
    $("a").click(function(){
        var value = $("input:[name=input_email]").val();
        
        if(/^[\w\-\+\&\*]+(?:\.[\w\-\_\+\&\*]+)*@(?:[\w-]+\.)+[a-zA-Z]{2,7}$/.test(value)){  
            $("input:[name=input_email]").next("a").text("aguarde.. buscando arquivo !")  
                    
            $.getJSON("download.php",{ _email:value},function(response){
                $("body").append("<a id='__link' href='"+response.location+"'>-</a>");
                $("input:[name=input_email]").val("");
                window.location = response.location;
                
                $("input:[name=input_email]").next("a").text("confirmar email");
                $("#email").slideUp();
            });
        }else{
            $("input:[name=input_email]").css("background-color","#E8B7B6");
        }  
    });
   
});
